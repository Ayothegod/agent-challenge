{
  "name": "synapse",
  "private": true,
  "type": "module",
  "scripts": {
    "build:ui": "react-router build",
    "dev:ui": "react-router dev",
    "start:ui": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "dev:agent": "mastra dev --dir mastra",
    "build:agent": "mastra build --dir mastra",
    "start:agent": "mastra start",
    "dev:debug": "LOG_LEVEL=debug npm run dev",
    "build": "mastra build && react-router build",
    "start": "concurrently \"npm:start:agent\" \"npm:start:ui\""
  },
  "dependencies": {
    "@mastra/client-js": "^0.16.1",
    "@mastra/core": "^0.21.1",
    "@mastra/libsql": "^0.15.2",
    "@mastra/loggers": "^0.10.16",
    "@mastra/memory": "^0.15.7",
    "@react-router/node": "^7.9.2",
    "@react-router/serve": "^7.9.2",
    "isbot": "^5.1.31",
    "mastra": "^0.17.0",
    "ollama-ai-provider-v2": "^1.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
