generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model indexedChunk {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  chunkId        String   @unique
  summary        String
  bullets        String[]
  entities       String[]
  canonicalTitle String
  tags           String[]
  metadata       Json
  source         String?

  @@index([canonicalTitle, chunkId])
}
